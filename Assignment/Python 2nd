def pattern():
    l2=[]
    for i in range(1,5):
        for j in range(5,i,-1):
            print(" ",end="")
        for k in range(0,i):
            print(str(i)+" ",end="")
        
        print()
    
def su():
    l2=[]
    for i in range(1,5):
        for j in range(5,i,-1):
            print(" ",end="")
        for k in range(0,i):
            l2.append(i)
        print(sum(l2))
        
        
pattern()
su()
