import java.util.*;
public class Main{
public static void main(String[] args){
int n=4;
int c =1;
int d=2;
for (int i=0; i<1; i++)
{
for (int j=n-i; j>1; j--)
{
System.out.print(" ");
}
for (int j=0; j<=i; j++ )
{
System.out.print("1 ");
}
System.out.println();
}
for (int i=1; i<n; i++)
{
for (int j=n-i; j>1; j--)
{
System.out.print(" ");
}
for (int j=0; j<=i; j++ )
{
System.out.print(d+" ");
c= c+ d;
}
d = c;
System.out.println();
}
}
}
